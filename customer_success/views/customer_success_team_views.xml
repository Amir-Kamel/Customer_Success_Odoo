<odoo>

    <!-- Teams list view -->
    <record id="view_customer_success_team_list" model="ir.ui.view">
        <field name="name">customer.success.team.list</field>
        <field name="model">customer.success.team</field>
        <field name="arch" type="xml">
            <list string="Teams">
                <field name="leader_id"/>
                <field name="name"/>
                <field name="user_ids"/>
            </list>
        </field>
    </record>

    <!-- Team form -->
    <record id="view_customer_success_team_form" model="ir.ui.view">
        <field name="name">customer.success.team.form</field>
        <field name="model">customer.success.team</field>
        <field name="arch" type="xml">
            <form string="Team">
                <sheet>
                    <group>
                        <field name="leader_id"/>
                        <field name="name"/>
                        <field name="user_ids" widget="many2many_tags"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_customer_success_team" model="ir.actions.act_window">
        <field name="name">Teams</field>
        <field name="res_model">customer.success.team</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_customer_success_team_list"/>
    </record>

</odoo>
