<odoo>
    <!-- Wizard Form -->
    <record id="view_customer_success_lost_reason_wizard_form" model="ir.ui.view">
        <field name="name">customer.success.lost.reason.wizard.form</field>
        <field name="model">customer.success.lost.reason.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm Churned">
                <group>
                    <field name="reason"/>
                </group>
                <footer>
                    <button string="Confirm"
                            type="object"
                            name="action_confirm"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_customer_success_lost_reason_wizard" model="ir.actions.act_window">
        <field name="name">Confirm Churned</field>
        <field name="res_model">customer.success.lost.reason.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
