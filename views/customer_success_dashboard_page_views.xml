<odoo>
 <record id="main_dashboard_page_record" model="customer.success.dashboard.page">
        <field name="name">Dashboard Overview</field>
    </record>

    <record id="view_customer_success_dashboard_page_form" model="ir.ui.view">
        <field name="name">customer.success.dashboard.page.form</field>
        <field name="model">customer.success.dashboard.page</field>
        <field name="arch" type="xml">
            <form create="false" edit="false" delete="false">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_recompute_dashboards"
                                type="object"
                                class="btn btn-outline-success d-flex align-items-center justify-content-center"
                                aria-label="Refresh Dashboard">
                            <i class="fa fa-refresh me-2" title="Refresh"/>
                            <span>Refresh</span>
                        </button>
                    </div>

                    <div class="d-flex flex-nowrap align-items-start">

                        <div style="min-width: 320px; max-width: 380px; flex-shrink: 0; padding-right: 24px;">
                            <field name="analytics_ids" mode="kanban" nolabel="1"
                                   context="{'kanban_view_ref': 'customer_success.view_customer_success_analytics_kanban'}"/>
                        </div>

                        <div class="flex-grow-1">
                            <field name="contact_ids" mode="kanban" nolabel="1"
                                   context="{'kanban_view_ref': 'customer_success.view_customer_success_dashboard_kanban'}"/>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

<record id="action_customer_success_dashboard_page" model="ir.actions.act_window">
    <field name="name">Dashboard</field>
    <field name="res_model">customer.success.dashboard.page</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_customer_success_dashboard_page_form"/>
    <field name="target">current</field>
    <field name="res_id" ref="customer_success.main_dashboard_page_record"/>
</record>
</odoo>