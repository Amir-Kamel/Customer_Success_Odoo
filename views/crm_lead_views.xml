<odoo>
  <record id="view_crm_lead_form_won_decision" model="ir.ui.view">
    <field name="name">crm.lead.form.won.decision</field>
    <field name="model">crm.lead</field>
    <field name="inherit_id" ref="crm.crm_lead_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='tag_ids']" position="after">
        <field name="create_cs" readonly="create_cs == 'no'"/>
      </xpath>
      <xpath expr="//div[@name='button_box']" position="inside">
        <button class="oe_stat_button"
                type="object"
                name="action_open_cs"
                icon="fa-briefcase"
                invisible="not show_cs_button">
          <field name="cs_count" widget="statinfo" string="Customer Success"/>
        </button>
      </xpath>
    </field>
  </record>
</odoo>
