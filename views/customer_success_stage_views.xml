<odoo>

    <!-- Stage list (list view for Odoo 18) -->
    <record id="view_customer_success_stage_list" model="ir.ui.view">
        <field name="name">customer.success.stage.list</field>
        <field name="model">customer.success.stage</field>
        <field name="arch" type="xml">
            <list string="Stages" default_order="sequence">
                <field name="sequence"/>
                <field name="name"/>
                <field name="fold"/>
            </list>
        </field>
    </record>

    <!-- Stage form -->
    <record id="view_customer_success_stage_form" model="ir.ui.view">
        <field name="name">customer.success.stage.form</field>
        <field name="model">customer.success.stage</field>
        <field name="arch" type="xml">
            <form string="Stage">
                <sheet>
                    <group>
                        <field name="name" readonly="is_won or is_lost"/>
                        <field name="sequence"/>
                        <field name="fold"/>
                    </group>
                    <group string="Stage Type">
                        <field name="is_won"/>
                        <field name="is_lost"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action using list,form (Odoo 18) -->
    <record id="action_customer_success_stage" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">customer.success.stage</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_customer_success_stage_list"/>
        <field name="context">{'default_sequence': 1}</field>
    </record>

</odoo>
