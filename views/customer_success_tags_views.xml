<odoo>

    <!-- List view (inline creation) -->
    <record id="view_csm_tag_list" model="ir.ui.view">
        <field name="name">csm.tag.list</field>
        <field name="model">csm.tag</field>
        <field name="arch" type="xml">
            <list string="Tags" editable="bottom" sample="1">
                <field name="name"/>
                <field name="color" widget="color_picker" />
            </list>
        </field>
    </record>

    <!-- Form view (fallback for details) -->
    <record id="view_csm_tag_form" model="ir.ui.view">
        <field name="name">csm.tag.form</field>
        <field name="model">csm.tag</field>
        <field name="arch" type="xml">
            <form string="Tags">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Services"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="color" required="True" widget="color_picker"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Tags -->
    <record id="action_customer_success_tags" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">csm.tag</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_csm_tag_list"/>
    </record>

</odoo>
